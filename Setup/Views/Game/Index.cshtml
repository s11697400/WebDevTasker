@model Game
@{
}
<link  rel="stylesheet" href="~/css/game.css" />
<h1>GAME</h1>

<div class="game">
    <div class="game-person" id="game-person">
        <img src="~/img/Person.png" />
    </div>
    <div class="game-object moving" id="game-object">
        <img src="~/img/Comet.png" />
    </div>
</div>
    <heart-element></heart-element>
    <div class="score"> </div>
    <div class="button-control">
        <button id="upBtn" class="button-control--button">^</button>
        <button id="downBtn" class="button-control--button">V</button>
    </div>
<script type="module" src="~/js/game.js"></script>
